<?xml version="1.0" encoding="utf-8"?>
<ru.rambler.libs.swipe_layout.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout"
    style="@style/SwipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:left_swipe_enabled="true"
    app:right_swipe_enabled="true">

    <!--CENTER-->
    <LinearLayout
        android:id="@+id/center_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <include
            layout="@layout/check"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <!--RIGHT-->
    <FrameLayout
        android:id="@+id/right_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:bring_to_clamp="100dp"
        app:clamp="self"
        app:gravity="right"
        app:sticky="none"
        tools:ignore="MissingPrefix">

        <include
            layout="@layout/check_item_actions_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />


    </FrameLayout>

    <!--LEFT-->
    <FrameLayout
        android:id="@+id/left_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:bring_to_clamp="100dp"
        app:clamp="self"
        app:gravity="left"
        app:sticky="none"
        tools:ignore="MissingPrefix">

        <include
            layout="@layout/check_item_actions_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />


    </FrameLayout>
</ru.rambler.libs.swipe_layout.SwipeLayout>