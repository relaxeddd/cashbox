<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/size_8"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_good_select_image"
        android:layout_width="@dimen/size_150"
        android:layout_height="@dimen/size_100"
        android:scaleType="centerCrop"
        android:src="@color/colorAccent"
        android:paddingStart="@dimen/size_6"
        android:paddingEnd="@dimen/size_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_color="#333333"
        app:riv_border_width="1dip"
        app:riv_corner_radius="5dip"
        app:riv_mutate_background="true"
        app:riv_oval="false"
        app:riv_tile_mode="clamp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_good_select_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="fdsfsfds"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/image_good_select_image"
        app:layout_constraintEnd_toEndOf="@+id/image_good_select_image"
        app:layout_constraintStart_toStartOf="@+id/image_good_select_image"
        android:layout_marginTop="@dimen/size_2"/>

</androidx.constraintlayout.widget.ConstraintLayout>